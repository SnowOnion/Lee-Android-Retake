<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_u_ktv_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="xyz.sonion.uktv.uKTV_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_str"
        android:id="@+id/welcomeStr" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeStr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/musicSelectionSpinner" />

    <Button
        android:text="切歌"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/changeMusicButton"
        android:layout_marginStart="23dp"
        android:layout_below="@+id/musicSelectionSpinner"
        android:layout_alignParentStart="true" />

    <Button
        android:text="停止"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:id="@+id/stopMusicButton"
        android:layout_alignBaseline="@+id/changeMusicButton"
        android:layout_alignBottom="@+id/changeMusicButton"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="暂停 / 继续"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pauseMusicButton"
        android:layout_alignBaseline="@+id/stopMusicButton"
        android:layout_alignBottom="@+id/stopMusicButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
